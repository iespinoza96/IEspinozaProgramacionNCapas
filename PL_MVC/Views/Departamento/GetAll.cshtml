@model ML.Result
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <h2>Departamento</h2>
    </div>


<div class="row">
    <div class="col-md-12">
        <h5>Seleccione un departamento para editarlo o + para agregar un departamento...</h5>
        <hr />
    </div>
</div>

@*<div class="row">*@
<div style="float:right;">
    @Html.ActionLink("+", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success" })

</div>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td class="text-center" style=" font-weight:bold;">Editar</td>

            <td class="hidden">IdDepartamento</td>
            <td class="text-center" style="font-weight:bold;">Nombre</td>
            <td class="hidden">IdArea</td>
            <td class="text-center" style=" font-weight:bold;">Area</td>
            
            <td class="text-center" style=" font-weight:bold;">Eliminar</td>
        </tr>
    </thead>
    <tbody>

        @foreach (ML.Departamento departamento in Model.Objects)
        {
            <tr>
                <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Departamento", new { IdDepartamento = departamento.IdDepartamento })"></a></td>
                <td class="hidden">@departamento.IdDepartamento</td>
                <td>@departamento.Nombre</td>
                <td class="hidden">@departamento.Area.IdArea</td>
                <td class="text-center">@departamento.Area.Nombre</td>
                <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Departamento", new { IdDepartamento = departamento.IdDepartamento})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
            </tr>
        }
    </tbody>
</table>
@*</div>*@
</div>
@*<br />*@